class Solution {
public:
    bool canFinish(int N, vector<vector<int>>& prerequisites) {
        int p=prerequisites.size();
        vector<int>adj[N];
        vector<int>Indeg(N,0);
        for(int i=0;i<p;i++){
            adj[prerequisites[i][1]].push_back(prerequisites[i][0]);
            Indeg[prerequisites[i][0]]++;
        }
        // Kahn's algo
        queue<int>q;
        for(int i=0;i<N;i++){
            if(!Indeg[i]){
                q.push(i);
            }
        }
        int count=0;
        while(!q.empty()){
            int node=q.front();
            q.pop();
            count++;
            // Look at all its neighbour
            for(int j=0;j<adj[node].size();j++){
                Indeg[adj[node][j]]--;
                if(Indeg[adj[node][j]]==0){
                    q.push(adj[node][j]);
                }
            }
        }
        return count==N;
    }
};
