class Solution {
public:
    
    bool checkBalanced(vector<int>& freq) {
        int sameCount = 0;

        for (int i = 0; i < 26; i++) {
            if (freq[i] == 0) continue;
            if (sameCount == 0) sameCount = freq[i];
            else if (freq[i] != sameCount) {
                return false;
            }
        }

        return true;
    }

    int longestBalanced(string s) {
        int n = s.length();
        int maxL = 0;

        for (int i = 0; i < n; i++) {
            vector<int> freq(26, 0);

            for (int j = i; j < n; j++) {
                freq[s[j] - 'a']++;
                if (checkBalanced(freq)) {
                    maxL = max(maxL, j - i + 1);
                }
            }
        }

        return maxL;
    }
};
