class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int count=0;
        int n=nums.size();
        vector<int>prefix(n);
        prefix[0]=nums[0];
        for(int i=1;i<n;i++){
            prefix[i]=prefix[i-1]+nums[i];
        }
        int total=prefix[n-1];
        for(int i=0;i<n-1;i++){
            int left=prefix[i];
            int right=total-left;
            if((left-right)%2==0){
                count++;
            }
        }
        return count;
    }
};
