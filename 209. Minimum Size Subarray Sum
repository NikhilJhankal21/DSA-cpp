class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int n = nums.size();
        int minLen = INT_MAX;
        int sum = 0;
        int low = 0;
        int len=0;

        for (int high = 0; high <= n-1; high++) {
            sum += nums[high];
            while (sum >= target) {
                len= high-low+1;
                minLen = min(minLen, len);
                sum -= nums[low];
                low++;
            }
        }
        if(minLen==INT_MAX) return 0;
        else return minLen;
    }
};

