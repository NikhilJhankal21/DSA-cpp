class Solution {
public:
    int countBinarySubstrings(string s) {
        int n=s.length();
        int count=0;
        int curr=1;
        int prev=0;
        for(int i=1;i<n;i++){
            if(s[i]==s[i-1]){
                curr++;
            }else{
                count+=min(prev,curr);
                prev=curr;
                curr=1;
            }
        }
        return count+min(prev,curr); 
    }
};
