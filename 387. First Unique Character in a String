class Solution {
public:
    int firstUniqChar(string s) {
        vector<int>vec(26,0);
        int n=s.length();
        for(int i=0;i<n;i++){
            char ch=s[i];
            vec[ch-'a']++;
        }
        for(int i=0;i<n;i++){
            char ch=s[i];
            if(vec[ch-'a']==1){
                return i;
            }
        }
        return -1;
    }
};
