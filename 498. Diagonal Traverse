class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& mat) {
        int m=mat.size();
        int n=mat[0].size();
        unordered_map<int,vector<int>>mp;

        // Store diagonal elements
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                mp[i+j].push_back(mat[i][j]);
            }
        }
        // Sort them
        vector<int> result;
        for (int k = 0; k < m + n - 1; k++) {
            if (k % 2 == 0) reverse(mp[k].begin(), mp[k].end());
            for (int x : mp[k]) result.push_back(x);
        }

       return result;
    }
};
