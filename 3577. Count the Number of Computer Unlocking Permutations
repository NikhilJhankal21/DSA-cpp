class Solution {
public:
    int M = 1e9 + 7;

    int countPermutations(vector<int>& complexity) {
        int n = complexity.size();

        for(int i = 1; i < n; i++){
            if(complexity[i] <= complexity[0]){
                return 0;
            }
        }

        long long result = 1;
        for(int i = 1; i < n; i++){
            result = (result * i) % M;  // factorial(n-1)
        }

        return result;
    }
};
