class Solution {
public:
    vector<string> findRelativeRanks(vector<int>& score) {
        int n=score.size();
        int position=1;
        vector<string>result(n);
        priority_queue<pair<int,int>>pq;
        for(int i=0;i<n;i++){
            pq.push({score[i],i});
        }
        while(!pq.empty()){
            int idx=pq.top().second;
            pq.pop();

            if(position==1){
                result[idx]="Gold Medal";
            }else if(position==2){
                result[idx]="Silver Medal";
            }else if(position==3){
                result[idx]="Bronze Medal";
            }
            else{
                result[idx]=to_string(position);
            }
            position++;

        }
        return result;
    }
};


