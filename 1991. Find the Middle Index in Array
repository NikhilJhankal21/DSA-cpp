class Solution {
public:
    int findMiddleIndex(vector<int>& nums) {
        int n = nums.size();
        int totalSum = 0;
        for(int i = 0; i < n; i++) {
            totalSum += nums[i];
        }
        int left_sum = 0;
        for(int i = 0; i < n; i++) {
            if(left_sum == totalSum - left_sum - nums[i]) {
                return i;
            }
            left_sum += nums[i];
        }
        return -1;
    }
};
