class Solution {
public:
    bool isHappy(int n) {
        unordered_set<int> seen;
        while (n != 1 && !seen.count(n)) {
            seen.insert(n);
            string s = to_string(n);
            int sum = 0;
            for (char c : s) {
                int digit = c - '0';
                sum += digit * digit;
            }
            n = sum;
        }
        return n == 1;
    }
};
