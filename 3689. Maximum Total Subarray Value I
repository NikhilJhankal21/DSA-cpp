class Solution {
public:
    long long maxTotalValue(vector<int>& nums, int k) {
        int mx = INT_MIN; // Start with the smallest value
        int mn = INT_MAX; // Start with the largest value
        for(int i = 0; i < nums.size(); i++) {
            mx = max(mx, nums[i]);
            mn = min(mn, nums[i]);
        }
        long long ans = (long long)(mx - mn) * k;
        return ans;
    }
};
