bool isperfectSq(int n){
    int root=sqrt(n);
    if(root*root==n){
        return true;
    }
    else return false;
}
class Solution {
public:
    bool judgeSquareSum(int c) {
        int x=0;
        int y=c;
        while(x<=y){
            if(isperfectSq(x) && isperfectSq(y)){
                return true;
            }
            else if(!isperfectSq(y)) {   
                y=(int)sqrt(y)*(int)sqrt(y);  
                x=c-y;  
        }
            else{   // x is not perfect 
                x=((int)sqrt(x)+1) *  ((int)sqrt(x)+1);
                y=c-x;
            }
    }
        return false;
    }
};
