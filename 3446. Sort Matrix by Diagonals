class Solution {
public:
    vector<vector<int>> sortMatrix(vector<vector<int>>& grid) {
        // Initialize variable
        int n=grid.size();
        int m=grid[0].size();
        map<int,vector<int>>mp;

        // Fill map usinh key and corresponding values
        // Key=row-col
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                mp[i-j].push_back(grid[i][j]);
            }
        }
        // Sort the diagonals
        // if key<0(negative) toh matlab yeh uppar wala triangle ka part h-> Aascending order
        // if key>=0(positive) toh matlab yeh lower wala traingle ka part h -> Descending order  
        for(auto& i:mp){
            if(i.first<0){
                sort(i.second.begin(),i.second.end()); // Increasing order
            }else{
                sort(i.second.rbegin(),i.second.rend()); // Decreasing order 
            }
        }
        // Put back value in the grid or matrix 
        // When we are putting value from the front of map we need to erase that also
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                grid[i][j]=mp[i-j].front();
                mp[i-j].erase(mp[i-j].begin());
            }
        } 
        return grid;
    }
};
