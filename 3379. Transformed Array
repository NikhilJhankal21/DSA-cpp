class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
        int n=nums.size();
        vector<int>result(n,0);
        for(int i=0;i<n;i++){
            int shift=nums[i]%n;     // Out of bound se bachne ke liye

            int newIdx=(i+shift)%n;  // Out of bound se bachne ke liye
            if(newIdx<0){
                newIdx+=n;
            }
            result[i]=nums[newIdx];
        }
        return result;
    }
};  
