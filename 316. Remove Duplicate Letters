class Solution {
public:
    string removeDuplicateLetters(string s) {
        vector<int>lastIdx(26,0);
        int n=s.length();
        for(int i=0;i<n;i++){
            lastIdx[s[i]-'a']=i;
        }
        vector<bool>seen(26,0);
        stack<char>st;
        for(int i=0;i<s.size();i++){
            int curr=s[i]-'a';
            if(seen[curr]) continue;
            while(st.size()>0 && st.top()>s[i] && i<lastIdx[st.top()-'a']){
                seen[st.top()-'a']=false;
                st.pop();
            }
            st.push(s[i]);
            seen[curr]=true;
        }
        string ans="";
        while(st.size()>0){
            ans+=st.top();
            st.pop();
        }
        reverse(ans.begin(),ans.end()); 
        return ans;

    }
};
