class Solution {
public:
    int minimumBoxes(vector<int>& apple, vector<int>& capacity) {
        int n = apple.size();
        int m = capacity.size();
        sort(capacity.rbegin(), capacity.rend());
        int ans = 0;
        int sum = 0;
        for (int i = 0; i < n; i++) {
            sum += apple[i];
        }
        for (int i=0; i<=m; i++) {
            if (sum <= 0)
                return ans;
            if (sum !=0) {
                ans++;
                sum -= capacity[i];
            }
        }

        return ans;
    }
};
