class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        int n=matrix.size();
        long long sum=0;
        int countOfNeg=0;
        int minabsolutevalue=INT_MAX;
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                sum+=abs(matrix[i][j]);
                if(matrix[i][j]<0){
                    countOfNeg++;
                }
                minabsolutevalue=min(minabsolutevalue,abs(matrix[i][j]));
            }
        }
        if(countOfNeg%2==0){
            return sum;
        }
        return sum-2*minabsolutevalue; // It is because you first remove the positive which you add while abs sum then add back the negative
    }
};
